# Example .env for Estudify (Sprint 0)
# Copy this file to `.env` and fill real values before running the app.
# Keep secrets out of version control. Use a local .env not committed.

SECRET_KEY=replace-me-with-generated-secret
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite por defecto, cambiar a PostgreSQL en producción)
DATABASE_URL=sqlite:///db.sqlite3

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=jesus.villotaa@campusucc.edu.co
EMAIL_HOST_PASSWORD=Chuchitov*12345

# Celery (Redis)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Static/Media Files
STATIC_URL=/static/
MEDIA_URL=/media/

# Security (solo en producción)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
