# Example .env for Estudify (Sprint 0)
# Copy this file to `.env` and fill real values before running the app.
# Keep secrets out of version control. Use a local .env not committed.

SECRET_KEY=replace-me-with-generated-secret
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database: default to sqlite for dev. For Postgres, set DATABASE_URL
# Example Postgres URL: postgres://user:password@localhost:5432/dbname
DATABASE_URL=sqlite:///db.sqlite3

# Email (Gmail example)
# For Gmail, create an App Password (if your account has 2FA) and use it here.
# Using plain Gmail credentials is not recommended. App Passwords required for Gmail with 2FA.
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-account@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=your-account@gmail.com

# Celery/Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=django-db
REDIS_URL=redis://localhost:6379/1

